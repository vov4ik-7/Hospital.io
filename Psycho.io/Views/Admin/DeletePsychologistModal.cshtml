@model Psycho.DTO.Core.DeletePsychologistDTO
<!-- Add .modal-dialog-centered to .modal-dialog to vertically center the modal -->
<div class="modal-dialog modal-dialog-centered" role="document">


    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Removal of a psychologist</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            Are you sure yot want to delete psychologist: @Model.Name?
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

            @Html.ActionLink("Delete", "DeletePsychologist", "Admin", new { id = Model.Id }, new {
                                                    data_ajax = "true",
                                                    data_ajax_method = "POST",
                                                    data_ajax_mode = "replace",
                                                    data_ajax_update = "deleteUserInfo",
                                                    data_ajax_success = "SuccessDelete", @class = "btn btn-primary" })
        </div>
    </div>
</div>