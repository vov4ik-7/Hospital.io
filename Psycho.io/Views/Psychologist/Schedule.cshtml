@model Psycho.DTO.Persistence.PsychologistWithAppointmentsDTO


<form>
    <div class="col-md-12 mb-4">
        <!--Content-->
        <div class="modal-content form-elegant">
            <!--Header-->
            <div class="modal-header text-center">
                <h3 class="modal-title w-100 dark-grey-text font-weight-bold my-3" id="myModalLabel"><strong>@Model.Name schedule</strong></h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-4">
                <div class="row">

                    <div class="col">
                        <div id="calendar"></div>
                        <script>

                                    var q = @Html.Raw(Model.json);

                                    $('#calendar').fullCalendar({
                                        defaultView: 'month',
                                        defaultDate: Date.now(),
                                        displayEventTime: true,
                                        displayEventEnd: true,

                                        eventRender: function (eventObj, $el) {
                                            $el.popover({
                                                title: eventObj.title,
                                                content: eventObj.description,
                                                trigger: 'hover',
                                                placement: 'top',
                                                container: 'body'
                                            });
                                        },

                                        events: q,
                                        timeFormat: 'H:mm'
                                    });
                                </script>
                    </div>

                </div>

            </div>
        </div>
        <!--/.Content-->
    </div>
</form>

@section scripts {

}